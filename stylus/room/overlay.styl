
.overlay_wrapper
  position absolute
  display table
  width 100%
  height 100%
  .overlay
    display table-cell
    vertical-align middle
    text-align center
  .overlay_inner
    background random_color(1)
    display inline-block
    padding 5px
    .sprite
      background-color #aaa
      display inline-block
      border 1px solid black
      vertical-align middle
    strong
      margin 5px
