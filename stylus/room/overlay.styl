
.overlay_wrapper
  position absolute
  top 0
  display table
  width 100%
  height 100%
  .overlay
    display table-cell
    vertical-align middle
    text-align center
  .overlay_inner
    display inline-block
    padding 5px
    background #e4e1db
    border-radius 5px
    border 2px solid #523b32
    box-shadow 0 3px 5px #000
    .sprite
      background-color #aaa
      display inline-block
      border 1px solid black
      vertical-align middle
    strong
      margin 5px
      white-space nowrap
