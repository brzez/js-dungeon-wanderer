
.overlay_wrapper
  position absolute
  top 0
  display table
  width 100%
  height 100%
  .overlay
    display table-cell
    vertical-align middle
    text-align center
    
  .show
    animation show .5s ease
  .action
    animation action .5s ease
    
  .overlay_inner
    display inline-block
    padding 5px
    background #e4e1db
    border-radius 5px
    border 2px solid #523b32
    box-shadow 0 3px 5px #000
    
    .sprite
      background-color #aaa
      display inline-block
      border 1px solid black
      vertical-align middle
    strong
      margin 5px
      white-space nowrap

/*
  entity animations
*/
@keyframes show {
  from {transform: scale(0);}
  to {transform: scale(1);}
}
@keyframes action {
  from {transform: rotate(30deg);}
  to {transform: rotate(0deg);}
}
