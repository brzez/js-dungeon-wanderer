@import 'reset'
@import 'vars'

.game
  margin 0 auto
  width $container_width
  @media(max-width: $container_width)
    width 100%
    
  &__view
    height 300px
    background #000
    color #fff
  &__ui
    height 500px
    background #eee
    text-align center

h1
  padding 15px
  margin 0
  text-align center

.stats_info
  padding 5px
  display inline-block
  border none
  text-align left
  & .name
    text-align center
    font-size 1.2em
    padding 5px
    font-weight bold
  & .col
    display inline-block
    width 50%
